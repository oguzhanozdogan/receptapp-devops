{
  "info": {
    "name": "Receptapp API",
    "_postman_id": "12345-abcde",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET alla recept",
      "request": {
        "method": "GET",
        "url": "http://localhost:3000/recipes"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", () => pm.response.code === 200);",
              "pm.test(\"Body is array\", () => Array.isArray(pm.response.json()));"
            ]
          }
        }
      ]
    },
    {
      "name": "GET recept med id=1",
      "request": {
        "method": "GET",
        "url": "http://localhost:3000/recipes/1"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", () => pm.response.code === 200);",
              "pm.test(\"Har id 1\", () => pm.response.json().id === 1);"
            ]
          }
        }
      ]
    },
    {
      "name": "GET okÃ¤nt recept",
      "request": {
        "method": "GET",
        "url": "http://localhost:3000/recipes/9999"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.test(\"Status 404\", () => pm.response.code === 404);"]
          }
        }
      ]
    },
    {
      "name": "POST nytt recept",
      "request": {
        "method": "POST",
        "url": "http://localhost:3000/recipes",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"title\":\"API-test\",\"ingredients\":[\"salt\"],\"instructions\":\"Blanda\",\"category\":\"test\",\"cookingTime\":5}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 201\", () => pm.response.code === 201);",
              "pm.test(\"Title korrekt\", () => pm.response.json().title === \"API-test\");"
            ]
          }
        }
      ]
    },
    {
      "name": "POST utan title (error)",
      "request": {
        "method": "POST",
        "url": "http://localhost:3000/recipes",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"ingredients\":[\"test\"],\"instructions\":\"Test\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": ["pm.test(\"Status 400\", () => pm.response.code === 400);"]
          }
        }
      ]
    }
  ]
}
